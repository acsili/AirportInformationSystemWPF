<Window x:Class="AirportInformationSystemWPF.View.Forms.PassengerTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirportInformationSystemWPF.View.Forms"
        mc:Ignorable="d"
        Title="PassengerTicketWindow" Height="350" Width="350">
    <Grid>
        <TextBox Name="TextBoxPassenger" HorizontalAlignment="Center" Margin="0,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="93,24,0,0" TextWrapping="Wrap" Text="Введите Id пассажира" VerticalAlignment="Top" FontSize="16"/>

        <TextBox Name="TextBoxTicket" HorizontalAlignment="Center" Margin="0,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Введите Id билета" VerticalAlignment="Top" FontSize="16" Margin="0,115,0,0"/>

        <Button Content="Оформить" FontSize="16" HorizontalAlignment="Left" Margin="128,230,0,0" Name="Accept" Background="White" VerticalAlignment="Top" Height="45" Width="90" Click="Accept_Click"/>

    </Grid>
</Window>
